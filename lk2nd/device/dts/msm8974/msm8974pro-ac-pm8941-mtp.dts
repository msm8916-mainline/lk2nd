#include <skeleton64.dtsi>
#include <lk2nd.dtsi>

/ {
	qcom,msm-id = <QCOM_ID_APQ8074PRO_AC 0x10000>,
		      <QCOM_ID_MSM8274PRO_AC 0x10000>,
		      <QCOM_ID_MSM8674PRO_AC 0x10000>,
		      <QCOM_ID_MSM8974PRO_AC 0x10000>;

	qcom,board-id = <QCOM_BOARD_ID_MTP 0>;
};

&lk2nd {
	oneplus-bacon {
		model = "OnePlus One";
		compatible = "oneplus,bacon";
		lk2nd,match-cmdline = "* mdss_mdp.panel=1:dsi:0:qcom,mdss_dsi_jdi_1080p_cmd *";

		//FIXME: lk2nd,dtb-files = "msm8974pro-oneplus-bacon";

		gpio-keys {
			compatible = "gpio-keys";
			down {
				lk2nd,code = <KEY_VOLUMEDOWN>;
				gpios = <&pmic 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			};

			up {
				lk2nd,code = <KEY_VOLUMEUP>;
				gpios = <&pmic 5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			};
		};
	};

	sony-leo {
		model = "Sony Xperia Z3";
		compatible = "sony,xperia-leo";
		/*
		 * Probably matches other Sony devices as well, but good enough
		 * for now.
		 */
		lk2nd,match-cmdline = "* androidboot.bootloader=s1 *";

		//FIXME: lk2nd,dtb-files = "msm8974pro-sony-leo";

		gpio-keys {
			compatible = "gpio-keys";
			down {
				lk2nd,code = <KEY_VOLUMEDOWN>;
				gpios = <&pmic 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			};

			up {
				lk2nd,code = <KEY_VOLUMEUP>;
				gpios = <&pmic 5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			};
		};
	};

	xiaomi-cancro {
		model = "Xiaomi 4 LTE(cancro)";
		compatible = "xiaomi,cancro";
		lk2nd,match-panel;

		//FIXME:lk2nd,dtb-files = "qcom-msm8974pro-xiaomi-cancro";

		panel {
			compatible = "xiaomi,cancro-panel", "lk2nd,panel";

			qcom,mdss_dsi_sharp_fhd_video {
				compatible = "xiaomi,cancro-sharp-fhd-video";
			};
			qcom,mdss_dsi_jdi_fhd_cmd {
				compatible = "xiaomi,cancro-jdi-fhd-cmd";
			};
			qcom,mdss_dsi_jdi_fhd_cmd_95 {
				compatible = "xiaomi,cancro-jdi-fhd-cmd-95";
			};
			qcom,mdss_dsi_sharp_fhd_cmd {
				compatible = "xiaomi,cancro-sharp-fhd-cmd";
			};

			qcom,mdss_dsi_sharp_fhd_cmd_95 {
				compatible = "xiaomi,cancro-sharp-fhd-cmd-95";
			};

			qcom,mdss_dsi_sharp_fhd_xcmd {
				compatible = "xiaomi,cancro-sharp-fhd-xcmd";
			};

			qcom,mdss_dsi_rsp_fhd_xcmd {
				compatible = "xiaomi,cancro-rsp-fhd-xcmd";
			};
		};
	};
	xiaomi-virgo {
		model = "Xiaomi Note LTE(virgo)";
		compatible = "xiaomi,virgo";
		lk2nd,match-panel;

		//FIXME:lk2nd,dtb-files = "qcom-msm8974pro-xiaomi-virgo";

		panel {
			compatible = "xiaomi,virgo-panel", "lk2nd,panel";

			qcom,mdss_dsi_jdi_fhd_xcmd {
				compatible = "xiaomi,virgo-jdi-fhd-xcmd";
			};
		};
	};
};

/*
 * The stock bootloader of sony-leo uses parts of the dts to initialize the
 * screen. So to get continous splash initialized by the first bootloader we
 * need to include these dts parts here.
 *
 * FIXME: This won't work if more Sony devices are added here...
 */
#include "sony/msm8974pro-ac-shinano_leo-display.dtsi"
